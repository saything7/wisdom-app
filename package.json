{
  "name": "wisdom-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",

    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run start:dev",

    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",

    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "test:e2e": "playwright test",

    "test:watch": "npm run test:watch:client",
    "test:watch:client": "cd client && npm run test:watch",
    "test:watch:server": "cd server && npm run test:watch",

    "test:coverage": "concurrently \"npm run test:coverage:server\" \"npm run test:coverage:client\"",
    "test:coverage:client": "cd client && npm run test:coverage",
    "test:coverage:server": "cd server && npm run test:coverage",

    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",

    "lint": "concurrently \"npm run lint:server\" \"npm run lint:client\"",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:fix": "eslint . --fix",

    "preinstall": "npx only-allow npm"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "typescript-eslint": "^8.53.1"
  },
  "workspaces": [
    "client",
    "server"
  ]
}